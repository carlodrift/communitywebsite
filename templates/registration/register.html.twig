{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

    <style>
        .main {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        #cr_registration_form_username {
            width: 100%;
            height: 40px;
            font-size: 1em;
        }

        #cr_registration_form_plainPassword {
            width: 100%;
            height: 40px;
            font-size: 1em;
        }

        .mb-3 {
            font-size: medium;
            font-style: italic;
        }

        li {
            color: red;
            list-style: none;
        }
    </style>
    <div class="main">
        <h2>S'inscrire</h2>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: "Nom d'utilisateur"
        }) }}
        <br>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        <br>
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'accepte d'être fliqué"
        }) }}
        <br>

        <div class="mb-3">
            Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>
        </div>
        <button type="submit" id="button">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>


{% endblock %}
